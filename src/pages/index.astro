---
import Layout from '@layouts/Layout.astro'

import Footer from '@components/home/Footer.astro'
import Founder from '@components/home/Founder.astro'
import Hero from '@components/home/Hero.astro'
import Intro from '@components/home/Intro.astro'
import Persona from '@components/home/Persona.astro'
import Sparkle from '@components/home/Sparkle.astro'
import Tact from '@components/home/Tact.astro'

const title = 'LifeOS - next-step evolution for the AI era'
const description =
  'LifeOS combines Time Management and Personal Knowledge Management to help individuals adapt to an era of high velocity, massive information flows, and the rise of artificial intelligence.'
---
<Layout title={title} description={description}>
  <Hero/>
  <Intro/>
  <Sparkle index="1"/>
  <Tact index="2"/>
  <Persona index="3"/>
  <Founder index="4"/>
  <Footer/>
</Layout>
