---
import type { HTMLAttributes } from 'astro/types'

interface Props extends HTMLAttributes<'pattern'> {
}

const {id} = Astro.props
---
<svg aria-hidden="true" class="absolute inset-0 h-full w-full">
  <defs>
    <pattern id={id} width="128" height="128" patternUnits="userSpaceOnUse" {...Astro.props}>
      <path d="M0 128V.5H128" fill="none" stroke="currentColor"/>
    </pattern>
  </defs>
  <rect width="100%" height="100%" fill={`url(#${id})`}/>
</svg>
