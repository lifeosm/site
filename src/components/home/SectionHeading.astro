---
import clsx from 'clsx'

interface Props {
  number: string;
  className?: string;
}

const {number, className, ...props} = Astro.props
---
<h2
  class={clsx(
    className,
    'inline-flex items-center rounded-full px-4 py-1 text-blue-600 ring-1 ring-inset ring-blue-600',
  )}
  {...props}
>
  <span class="font-mono text-sm" aria-hidden="true">
    {number.padStart(2, '0')}
  </span>
  <span class="ml-3 h-3.5 w-px bg-blue-600/20"/>
  <span class="ml-3 text-base font-medium tracking-tight">
    <slot/>
  </span>
</h2>
