---
import { Button } from '@components/Button.tsx'
import Container from '@components/Container.astro'
import Pattern from '@components/patterns/CircleSquare.astro'
---
<section id="subscribe" aria-label="Subscribe"
         class="scroll-mt-14 bg-blue-600 sm:scroll-mt-32">
  <div class="overflow-hidden lg:relative">
    <Container size="md"
               className="relative grid grid-cols-1 items-end gap-y-12 py-20 lg:static lg:grid-cols-2 lg:py-28 xl:py-32">
      <Pattern id="subscribe-pattern"
               class="absolute -top-32 left-0 w-full sm:-top-5 sm:left-3/4 sm:ml-8 sm:w-auto md:left-2/3 lg:left-auto lg:right-2 lg:ml-0 xl:left-2/3 xl:right-auto"/>
      <div>
        <h2
          class="font-display text-5xl font-extrabold tracking-tight text-white sm:w-3/4 sm:text-6xl md:w-2/3 lg:w-auto">
          Get hand-crafted monthly digests
        </h2>
        <p class="mt-4 text-lg tracking-tight text-blue-200">
          Every month, I send you an exceptionally actionable email
          that helps you grow personally and professionally with AI.
        </p>
      </div>
      <form action="https://form.typeform.com/to/Pc4UwxCS" method="get" target="_blank"
            class="lg:pl-16">
        <h3 class="text-base font-medium tracking-tight text-white">
          Join my monthly journey of personal growth
          <span aria-hidden="true">&rarr;</span>
        </h3>
        <div class="mt-4 sm:relative sm:flex sm:items-center sm:py-0.5 sm:pr-2.5">
          <div class="relative sm:static sm:flex-auto">
            <input
              type="email"
              name="email"
              required
              aria-label="Email address"
              placeholder="Email address"
              class="peer relative z-10 w-full appearance-none bg-transparent px-4 py-2 text-base text-white placeholder:text-white/70 focus:outline-none sm:py-3"
            />
            <div
              class="absolute inset-0 rounded-md border border-white/20 peer-focus:border-blue-300 peer-focus:bg-blue-500 peer-focus:ring-1 peer-focus:ring-blue-300 sm:rounded-xl"/>
          </div>
          <Button type="submit" color="white"
                  className="mt-4 w-full sm:relative sm:z-10 sm:mt-0 sm:w-auto sm:flex-none">
            Get free digest
          </Button>
        </div>
      </form>
    </Container>
  </div>
</section>
